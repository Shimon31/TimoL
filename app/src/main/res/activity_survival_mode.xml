<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp"
    android:background="#F5F5F5"
    tools:context=".SurvivalModeActivity">


    <ImageView
        android:id="@+id/leftArrow"
        android:layout_width="8dp"
        android:layout_height="15dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/left_arrow"
        app:layout_constraintBottom_toBottomOf="@id/crown_Icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/crown_Icon" />


    <TextView
        android:id="@+id/head_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/bricolage_grotesque_extrabold"
        android:text="Survival Mode"
        android:textColor="#2D2C34"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/leftArrow"
        app:layout_constraintStart_toEndOf="@id/leftArrow"
        app:layout_constraintTop_toTopOf="@id/leftArrow" />

    <ImageView
        android:id="@+id/notification_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/notification_logo"
        app:layout_constraintBottom_toBottomOf="@id/crown_Icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/crown_Icon" />

    <ImageView
        android:id="@+id/notification_dot"
        android:layout_width="9dp"
        android:layout_height="9dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/notificaton_dot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/crown_Icon"
        android:layout_width="58dp"
        android:layout_height="34dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/premium_icon"
        app:layout_constraintEnd_toStartOf="@id/notification_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="5"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/crown_Icon"
        app:layout_constraintStart_toEndOf="@id/crown_Icon"
        app:layout_constraintTop_toTopOf="@id/crown_Icon" />


    <ImageView
        android:id="@+id/top_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/fashio_king_or_queen"
        app:layout_constraintTop_toBottomOf="@id/crown_Icon" />

    <TextView
        android:id="@+id/topTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bricolage_grotesque_extrabold"
        android:text="Fashion King or Queen"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/top_picture"
        app:layout_constraintStart_toStartOf="@id/top_picture"
        app:layout_constraintTop_toTopOf="@id/top_picture" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrainLayoyt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topTV">

        <ImageView
            android:id="@+id/crown_logo"
            android:layout_width="29dp"
            android:layout_height="26dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/premium_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_number_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/bricolage_grotesque_extrabold"
            android:text="10"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/crown_logo"
            app:layout_constraintStart_toEndOf="@id/crown_logo"
            app:layout_constraintTop_toTopOf="@id/crown_logo" />

        <ImageView
            android:id="@+id/gold_logo_2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/gold_icon"
            app:layout_constraintBottom_toBottomOf="@id/crown_logo"
            app:layout_constraintStart_toEndOf="@id/text_number_2"
            app:layout_constraintTop_toTopOf="@id/crown_logo" />

        <TextView
            android:id="@+id/text_number_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/bricolage_grotesque_extrabold"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/crown_logo"
            app:layout_constraintStart_toEndOf="@id/gold_logo_2"
            app:layout_constraintTop_toTopOf="@id/crown_logo" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/progress_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintEnd_toEndOf="@id/top_picture"
        app:layout_constraintStart_toStartOf="@id/top_picture"
        app:layout_constraintTop_toBottomOf="@id/constrainLayoyt">

        <!-- Level Progress Bar -->
        <ProgressBar
            android:id="@+id/level_progress"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="80dp"
            android:layout_height="8dp"
            android:progress="60"
            android:progressBackgroundTint="#C0C4C4"
            android:progressTint="#FFD700"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/points_progress"
            app:layout_constraintHorizontalWeight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/frame1"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_marginStart="-10dp"
            android:src="@drawable/frame"
            app:layout_constraintBottom_toBottomOf="@id/level_progress"
            app:layout_constraintStart_toStartOf="@id/level_progress"
            app:layout_constraintTop_toTopOf="@id/level_progress" />

        <ImageView
            android:id="@+id/circle"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/circle"
            app:layout_constraintBottom_toBottomOf="@id/level_progress"
            app:layout_constraintStart_toStartOf="@id/level_progress"
            app:layout_constraintTop_toTopOf="@id/level_progress" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/circle"
            app:layout_constraintEnd_toEndOf="@id/circle"
            app:layout_constraintStart_toStartOf="@id/circle"
            app:layout_constraintTop_toTopOf="@id/circle" />

        <ProgressBar
            android:id="@+id/points_progress"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="80dp"
            android:layout_height="8dp"
            android:progress="70"
            android:progressBackgroundTint="#C0C4C4"
            android:progressTint="#7B68EE"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontalWeight="1"
            app:layout_constraintStart_toEndOf="@id/level_progress"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/shieldLogo"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_marginStart="-10dp"
            android:src="@drawable/silver"
            app:layout_constraintBottom_toBottomOf="@id/points_progress"
            app:layout_constraintStart_toStartOf="@id/points_progress"
            app:layout_constraintTop_toTopOf="@id/points_progress" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_picture">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/start_fight_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/start_fightTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bricolage_grotesque_extrabold"
                android:gravity="center"
                android:shadowColor="#FFFFFF"
                android:shadowDx="6"
                android:shadowDy="6"
                android:shadowRadius="2"
                android:text="START FIGHT!"
                android:textColor="#FF2600"
                android:textSize="45sp" />

            <TextView
                android:id="@+id/upload_image_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bricolage_grotesque_extrabold"
                android:text="Upload your image to start the fight"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/cloudIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/cloud" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/uploadBtn"
                android:layout_width="176dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/drawable_bg"
                android:backgroundTint="#FF2600"
                android:fontFamily="@font/inder"
                android:text="UPLOAD"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="327dp"
                android:layout_height="127dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="12dp">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp">


                    <!-- First TextView -->
                    <TextView
                        android:id="@+id/cardViewTitleTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bricolage_grotesque_extrabold"
                        android:text="Make sure your image meets the guidelines"
                        android:textAlignment="center"
                        android:textSize="13sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/cardViewTextView"/>


                    <TextView
                        android:id="@+id/cardViewTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cardViewText"
                        android:textAlignment="center"
                        android:textSize="13sp"
                        app:layout_constraintTop_toBottomOf="@id/cardViewTitleTV"
                        app:layout_constraintEnd_toEndOf="@id/cardViewTitleTV"
                        app:layout_constraintStart_toStartOf="@id/cardViewTitleTV"
                        app:layout_constraintBottom_toBottomOf="parent" />



                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>